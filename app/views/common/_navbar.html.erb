<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
    <!--<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>-->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Mukta:wght@300&display=swap" rel="stylesheet">
</head>
<body>
<!--<header>-->
<nav class="navbar navbar-expand-md navbar-light bg-info">
    <a class="navbar-brand" href="#" style="margin-bottom: 0%;">
       <%= image_tag "ec_logo.png", width: 85 %>
    </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
    <ul class="navbar-nav">
    <li>
      <a class="nav-link text-white px-3" style="font-size: 20px;" <%= link_to 'HOME', root_path %> </a>
    </li>
    <% if !current_user.present?%>
      <li class="nav-item abc">
        <a class="nav-link text-white px-3" style="font-size: 20px;" <%= link_to 'SIGN UP', new_user_registration_path %> </a>
      </li>
      <li class="nav-item abc">
        <a class="nav-link text-white px-3" style="font-size: 20px;" <%= link_to 'SIGN IN', user_session_path %> </a>
      </li>
      <% end %>
      <% if user_signed_in? %>
      <li class="nav-item abc">
      <a class="nav-link text-white px-3" style="font-size: 20px;" <%= link_to "LOG OUT", destroy_user_session_path, data: { "turbo-method": :delete }  %> </a>
    </li> 
    <% if current_user.role == "seller" %>
    <li class="nav-item abc">
    <a class="nav-link text-white px-3" style="font-size: 20px;" <%= link_to "ADD PRODUCT", new_product_path  %> </a>
  </li> 
  <% end %>
    <% else %>
    <% end %>

    </ul>
  </div>
      <form class="form-inline my-2 my-lg-0 float-right">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>
<br>

</body>
</html>